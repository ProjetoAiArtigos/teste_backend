  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon",
    "build": "tsc && tsc-alias && cpx \"./src/shared/views/**/*\" ./dist/src/shared/views --clean && cpx \"./upload/**/*\" ./dist/upload --clean",
